{
  "MyPipeline": {
    "Type": "AWS::CodePipeline::Pipeline",
    "Properties": {
      "Name": "MyPipeline",
      "RoleArn": { "Fn::GetAtt": [ "MyPipelineRole", "Arn" ] },
      "ArtifactStore": {
        "Type": "S3",
        "Location": {
          "Ref": "MyArtifactS3"
        }
      },
      "Stages": [
        {
          "Name": "Source",
          "Actions": [
            {
              "Name": "SourceAction",
              "ActionTypeId": {
                "Category": "Source",
                "Owner": "ThirdParty",
                "Provider": "GitHub",
                "Version": "1"
              },
              "Configuration": {
                "Owner": "mucahitnezir",
                "Repo": "lambda-function",
                "Branch": "main",
                "PollForSourceChanges": false,
                "OAuthToken": { "Ref": "GitHubTokenParam" }
              },
              "OutputArtifacts": [
                {
                  "Name": "material"
                }
              ]
            }
          ]
        },
        {
					"Name": "Build",
					"Actions": [
						{
							"Name": "Source",
							"RunOrder": 1,
							"InputArtifacts": [
								{
									"Name": "material"
								}
							],
							"Configuration": {
								"ProjectName": { "Ref": "CodeBuildInbound" }
							},
							"ActionTypeId": {
								"Category": "Build",
								"Owner": "AWS",
								"Provider": "CodeBuild",
								"Version": "1"
							}
						}
					]
				}
      ]
    }
  }
}
